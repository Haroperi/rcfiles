  alias hibernatemode='sudo pmset -a hibernatemode 1'
  alias sleepmode='sudo pmset -a hibernatemode 3'
  alias vim=/usr/local/bin/vim
  alias cpptest='cd ~/work/gomi && vim test.cpp'
  alias socks='ssh -N -f -D localhost:10080 -l s1011425 www.coins.tsukuba.ac.jp'

  # Ruby
  export RUBYLIB=/Users/haro/work/rubysample:$RUBYLIB
  [[ -s "/Users/haro/.rvm/scripts/rvm" ]] && source "/Users/haro/.rvm/scripts/rvm"  # This loads RVM into a shell session.

  # Java
  export JAVA_OPTS="-Dfile.encoding=UTF-8"
fi

